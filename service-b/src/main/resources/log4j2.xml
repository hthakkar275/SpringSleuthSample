<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="distributed-tracing" packages="org.hemant.thakkar">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %-7t %F:%L - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="stdout"/>
        </Root>
        <Logger name="org.hemant.thakkar" level="TRACE">
            <AppenderRef ref="stdout"/>
        </Logger>
    </Loggers>
</Configuration>